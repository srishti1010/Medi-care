<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/blue"
    tools:context=".UserDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Heading -->
        <TextView
            android:id="@+id/textViewHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save My Personal Details"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:layout_marginBottom="16dp"
            android:layout_gravity="start" />

        <!-- Profile Picture -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:src="@drawable/proo"
            app:civ_border_color="@color/green"
            app:civ_border_width="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Change Photo Button -->
        <Button
            android:id="@+id/buttonChangePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Photo"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Name -->
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Srishti Rai"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <!-- Father's Name -->
        <TextView
            android:id="@+id/textViewFatherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Father's Name: Binod Kumar Rai"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"/>

        <!-- Mother's Name -->
        <TextView
            android:id="@+id/textViewMotherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother's Name: Swati Rai"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"/>

        <!-- Age -->
        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: 20"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"/>

        <!-- Email -->
        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: srishtirai2004@gmail.com"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"/>

        <!-- Phone Number -->
        <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number: 8756363071"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"/>

        <!-- Blood Group -->
        <TextView
            android:id="@+id/textViewBloodGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group: B+"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"/>

        <!-- Diseases Encountered -->
        <TextView
            android:id="@+id/textViewDiseases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diseases Encountered:"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"/>

        <!-- Disease History Yes/No -->
        <TextView
            android:id="@+id/textViewDiseaseHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disease History: No"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"/>

        <!-- Kids Information -->
        <TextView
            android:id="@+id/textViewKids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kids (if any): No"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
