<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title Text: 24*7 Healthcare -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24*7 Healthcare"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <!-- Login Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Create Account"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <!-- Name Input with Icon -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/name_input"
        android:drawableStart="@drawable/profile_small"
        android:drawablePadding="16dp"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:textColorHint="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/transparent_class"/> <!-- Transparent box background -->

    <!-- Email Input with Icon -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/email_small"
        android:drawablePadding="16dp"
        android:id="@+id/email_input"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColorHint="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/transparent_class"/> <!-- Transparent box background -->

    <!-- Password Input with Icon -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/lock_small"
        android:drawablePadding="16dp"
        android:id="@+id/password_input"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColorHint="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/transparent_class"/> <!-- Transparent box background -->

    <!-- Confirm Password Input with Icon -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/lock_small"
        android:drawablePadding="16dp"
        android:id="@+id/confirm_password_input"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColorHint="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/transparent_class"/> <!-- Transparent box background -->

    <!-- Login Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/login_button"
        android:text="REGISTER"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:textSize="18sp"/>
    <!-- Button with same design -->

    <!-- Register Link -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/already_have_account"
        android:text="Already have an account?"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>
