<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1565C0"/> <!-- Background color when pressed -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="@android:color/white"/> <!-- Border -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Background color -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="@android:color/white"/> <!-- Border -->
        </shape>
    </item>
</selector>
